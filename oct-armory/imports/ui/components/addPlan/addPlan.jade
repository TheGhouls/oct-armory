template(name='addPlan')
  h4 Add a Battle Plan Form your GitHub Repos
  if (currentUser)
    h5  Click add to add one of your repos
    if (getUserArmoryRepos)
      table.table.table-striped.table-hover
        thead
          tr
            th #
            |       
            th Name
            |       
            th url
            |     
            th tag
        tbody
          each getUserArmoryRepos
            tr
              td
                button(id=name).addBp add
              |       
              td= armory_info.name
              |       
              td= url
              |       
              td= armory_info.tags

    if (isLoading)
      p .
    else 
      .sk-spinner.sk-spinner-cube-grid
        .sk-cube
        .sk-cube
        .sk-cube
        .sk-cube
        .sk-cube
        .sk-cube
        .sk-cube
        .sk-cube
        .sk-cube
